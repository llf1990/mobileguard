<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <TextView
        android:id="@+id/tv_listitem_number"
        android:layout_width="wrap_content" 
        style="@style/text_item"
        android:text="拦截电话110"
        />
    
    <TextView
        android:id="@+id/tv_listitem_mode"
        android:layout_below="@+id/tv_listitem_number"
        android:textSize="20dp"
        android:paddingLeft="10dp"
        android:layout_width="wrap_content"
   	 	android:layout_height="wrap_content"
        android:text="拦截模式：全部"
        />
    <ImageView
        android:id="@+id/iv_listitem_del"
		android:layout_centerVertical="true"
		android:layout_alignParentRight="true"
		android:layout_marginRight="50dp"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        android:src="@drawable/blacklist_delete_selector"
        
        />

</RelativeLayout>
